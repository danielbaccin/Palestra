<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/container">

    <ListView
        android:id="@+id/listParticipantes"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp" />

    <com.melnykov.fab.FloatingActionButton
        android:id="@+id/fabAddParticipante"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="16dp"
        android:onClick="abrirFormParticipante"
        android:src="@drawable/ic_action_new"
        fab:fab_colorNormal="@color/OrangeRed"
        fab:fab_colorPressed="@color/Orange"
        fab:fab_colorRipple="@color/Orange" />
</FrameLayout>